{
  "name": "devops-agent-r2d2",
  "version": "0.3.1",
  "description": "GitOps automation agent for Kubernetes deployments",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"tsc --watch\" \"nodemon --watch dist dist/index.js\"",
    "dev:simple": "tsx watch src/index.ts",
    "build": "tsc && npm run copy:templates",
    "copy:templates": "mkdir -p dist/templates && cp -R src/templates/* dist/templates/",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "gitops",
    "kubernetes",
    "argocd",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "@octokit/rest": "^20.0.2",
    "dotenv": "^16.4.1",
    "fastify": "^5.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
